<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mdp.CoordinatesFragment"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:paddingTop="60dp"
        android:paddingBottom="60dp">
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingBottom="100dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the X and Y Coordinate for the Start Point."/>

            <LinearLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".40"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/x_sp"
                    android:text="X :"/>

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/x_sp"
                    android:layout_width="0dp"
                    android:layout_weight=".80"
                    android:text="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".40"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/y_sp"
                    android:text="Y:"/>

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/y_sp"
                    android:layout_width="0dp"
                    android:layout_weight=".80"
                    android:text="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textAlignment="center"/>
            </LinearLayout>
            <Button
                android:id="@+id/setSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Start Point" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the X and Y Coordinate for the End Point."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:labelFor="@+id/x_ep"
                    android:text="X :" />

                <EditText
                    android:id="@+id/x_ep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".80"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:text="1"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:labelFor="@+id/y_ep"
                    android:text="Y:" />

                <EditText
                    android:id="@+id/y_ep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".80"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:text="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:id="@+id/setEP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set End Point" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
